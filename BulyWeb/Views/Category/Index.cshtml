@model List<Category>

 <div class="container">
     <div class="row pt-4 pd-3">
         <div class="col-6">
             <h2 class="text-primary">
                 Category List
             </h2>
         </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Creat New Category
            </a>
        </div>
     </div>
    <table class="table table-bordered table-sriped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach(var obj in Model.OrderBy(u => u.DisplayOrder)) // here we r saying sort this list by the "DisplayOrder"
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                </tr>
            }
        </tbody>
    </table>
 </div>